<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>

<VBox xmlns:fx="http://javafx.com/fxml" styleClass="vbox" stylesheets="@sidestage.css, @bootstrap3.css" fx:controller="dzhu.controller.PretVikingController">

	<Label wrapText="true" text="1. Installed Viking by clicking below link if Viking is not installed." />
	<Hyperlink fx:id="linkPretVikingInstall" wrapText="true" text="http://www.vikingfx.com/download/install/VikingFXTrader_install.exe" onAction="#linkPretVikingInstallClicked"/>
	<Label wrapText="true" text="2. Start Viking client and do some trades, check trades can be done and chart is shown." />
	<Label text="    Stack: Live" />
	<Label fx:id="lb1" text="    User Name: [#PretSettings.VIKING_USERNAME#]" />
	<Label fx:id="lb2" text="    Password: [#PretSettings.VIKING_PASSWORD#]" />
</VBox>